<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UseTimeMotivator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorPrimarySurface">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/purple_50</item>
        <item name="android:colorBackground">?attr/background</item>
    </style>

    <style name="Theme.UseTimeMotivator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UseTimeMotivator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UseTimeMotivator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MatchParent" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Theme.Text" parent=""/>

    <style name="Theme.Text.Primary">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="Theme.Text.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Text.Secondary">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="Theme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/background</item>
    </style>

    <style name="Theme.CardView.Outer">
        <item name="android:minHeight">55dp</item>
    </style>

    <style name="Theme.CardView.InnerLayout">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/fragment_padding</item>
    </style>

    <style name="Theme.CardText" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.CardTitle" parent="Theme.CardText">
        <item name="android:textAppearance">@style/Theme.Text.Primary.Bold</item>
    </style>

    <style name="Theme.CardDesc" parent="Theme.CardText">
        <item name="android:textAppearance">@style/Theme.Text.Secondary</item>
        <item name="android:layout_marginStart">@dimen/card_desc_margin_start</item>
    </style>

    <style name="Theme.CardStatsText" parent="Theme.CardTitle">

    </style>

    <style name="Theme.CardStatsText.TimeValue">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="Theme.CardStatsText.TimeValue.Hours">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">45dp</item>
    </style>

    <style name="Theme.CardStatsText.TimeValue.Minutes">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">25dp</item>
    </style>

    <style name="Theme.CardStatsText.TimeSign">
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Theme.CardDescDay" parent="Theme.CardDesc">
        <item name="android:layout_marginStart">@dimen/card_desc_day_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.CardButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/card_button_size</item>
        <item name="minWidth">@dimen/card_button_size</item>
        <item name="android:layout_height">@dimen/card_button_size</item>
        <item name="minHeight">@dimen/card_button_size</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/card_button_margin</item>
        <item name="android:padding">@dimen/card_button_padding</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">@dimen/card_button_inset</item>
        <item name="android:insetRight">@dimen/card_button_inset</item>
        <item name="android:insetTop">@dimen/card_button_inset</item>
        <item name="android:insetBottom">@dimen/card_button_inset</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="iconTintMode">src_in</item>
    </style>

    <style name="Theme.CardButtonEdit" parent="Theme.CardButton">
        <item name="icon">@drawable/ic_menu_edit</item>
        <item name="contentDescription">@string/card_button_edit</item>
    </style>

    <style name="Theme.CardButtonRemove" parent="Theme.CardButton">
        <item name="icon">@drawable/ic_menu_trash</item>
        <item name="contentDescription">@string/card_button_remove</item>
    </style>

    <style name="Theme.ListRecyclerView" parent="">
        <item name="android:layout_width">@dimen/zero_dimen</item>
        <item name="android:layout_height">@dimen/zero_dimen</item>
    </style>

    <style name="Theme.ListSingleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/zero_dimen</item>
        <item name="android:layout_height">@dimen/list_button_height</item>
        <item name="android:layout_marginTop">@dimen/list_button_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/zero_dimen</item>
        <item name="android:insetLeft">@dimen/list_button_inset</item>
        <item name="android:insetRight">@dimen/list_button_inset</item>
        <item name="android:insetTop">@dimen/list_button_inset</item>
        <item name="android:insetBottom">@dimen/list_button_inset</item>
        <item name="cornerRadius">@dimen/zero_dimen</item>
    </style>
</resources>